<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="16dp"
            android:text='\n \n \t Chef CODRIN POPESCU \n \n \n \n \n \t "Bucătăria este locul în care simt că trăiesc cu adevărat." \n \n \n \n \n \n Specialiti: \n \t -paste \n \t -pizza \n \t -salate \n \n \n \n \n \t Il recomandam pe Codrin datorita capacitatilor sale. Un bucatar adevarat rebuie sa aiba aptitudini, un gust deosebit si o foarte buna organizare, de asemenea sa reziste sub presiune.'/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/bucatar1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="\n \t \tDate de contact: \n \n Numar de telefon: 07245735524 \n \nDisponibilitate: Luni-Sambata \n \n Tarif mediu: 300 LEI" />
    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>