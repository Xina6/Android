<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Review">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d1d1d1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <EditText
            android:id="@+id/txtNameC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numele dumneavoastra" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Recenzia dumneavoastra" />

        <EditText
            android:id="@+id/txtCalificative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calificativ (de la 1 la 5)" />

        <Button
            android:id="@+id/btnAddR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugare recenzie" />

        <ListView
            android:id="@+id/listview_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>